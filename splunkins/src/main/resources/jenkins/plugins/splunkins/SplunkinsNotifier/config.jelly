<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define" xmlns:l="/lib/layout" xmlns:t="/lib/hudson" xmlns:f="/lib/form">
    <f:block>
        <f:entry title="${%Send build log}" field="collectBuildLog">
            <f:checkbox default="true"  />
        </f:entry>
        <f:entry title="${%Send environment variables}" field="collectEnvVars">
            <f:checkbox default="true" />
        </f:entry>
        <f:entry title="${%Files to send}" field="filesToSend">
            <f:textbox default='*.xml' value="${instance.filesToSend}" />
        </f:entry>
    </f:block>
</j:jelly>
